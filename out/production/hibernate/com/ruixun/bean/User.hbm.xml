<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ruixun.bean">

	<class name="User" table="user">
	   <id name="id" column="id">
	     <generator class="native" />
	   </id>
	   <property name="name" column="name" />
	   <property name="address" column="address" />

		<set name="hobbies" table="hobbiesSet">
			<key column="userId"/>
			<element column="hobby" type="java.lang.String"/>
		</set>

		<list name="works" table="worksList">
			<key column="userId"/>
			<list-index column="workIndex"></list-index>
			<element column="work" type="java.lang.String"/>
		</list>

		<map name="city" table="userMap">
			<key column="userId"></key>
			<map-key column="addId" type="java.lang.String"/>
			<element column="address" type="java.lang.String"/>
		</map>

	</class>

</hibernate-mapping>